{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"removeComments": true,
		// "allowJs": true,
		// "useDefineForClassFields": true,
		"jsx": "preserve",
		"sourceMap": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"lib": ["esnext", "dom"],
		"baseUrl": "./packages",
		// "types": [ "node"],

		"paths": {},
		"outDir": "./type"
	},
	"include": ["packages"],
	"exclude": ["node_modules", "dist", "src"]
}
